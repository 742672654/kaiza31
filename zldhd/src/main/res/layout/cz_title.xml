<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_home_page_icon2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_tcb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/tcb_system"
            android:textColor="@color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/tv_tcb_version2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/tcb_version"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_update_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="00:00"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_tcb_workstation2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:gravity="center"
            android:text="@string/workstation"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_more2"
            style="@style/more_font_style"
            android:layout_marginLeft="10dip"
            android:background="@drawable/pole_up_selector"
            android:text="设置"
            android:textColor="@color/blue_239DFD"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_update2"
            style="@style/more_font_style"
            android:layout_marginLeft="10dip"
            android:background="@drawable/pole_up_selector"
            android:gravity="center"
            android:text="升级"
            android:textColor="@color/blue_239DFD"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_Restart2"
            style="@style/more_font_style"
            android:layout_marginLeft="10dip"
            android:background="@drawable/pole_up_selector"
            android:gravity="center"
            android:text="退出"
            android:textColor="@color/blue_239DFD"
            android:textSize="15sp" />
    </LinearLayout>

</RelativeLayout>