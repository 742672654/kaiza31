<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maste"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="5">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="129dp">

            <TextView
                android:id="@+id/tv_cost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:layout_marginTop="5dip"
                android:text="@string/park_cost"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/tv_park_cost2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_cost2"
                android:layout_marginLeft="20dip"
                android:text="@string/park_cost_content"
                android:textColor="@color/orange"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/tv_park_cost2"
                android:layout_alignBottom="@+id/tv_park_cost2"
                android:layout_toRightOf="@+id/tv_park_cost2"
                android:text="@string/rmb"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </RelativeLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"


        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"

        android:background="@color/maste"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_free2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/bt_shape"
            android:text="免费"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2" />

        <Button
            android:id="@+id/btn_discount2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/bt_shape"
            android:text="减免"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:background="@color/maste">

        <Button
            android:id="@+id/btn_charge_finish2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/bt_shape"
            android:text="结算订单"
            android:textColor="@color/white"
            android:textSize="25sp" />
    </LinearLayout>


</LinearLayout>